<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>user</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>123456</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://127.0.0.1:3306/onlinesystem?characterEncoding=utf-8&amp;serverTimezone=GMT%2B8</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>

    <servlet>
        <servlet-name>handleExit</servlet-name>
        <servlet-class>servlet.ExitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>handleExit</servlet-name>
        <url-pattern>/jsp/Exit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyPassword</servlet-name>
        <servlet-class>servlet.ModifyPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyPassword</servlet-name>
        <url-pattern>/jsp/ModifyPassword</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NextQuestion</servlet-name>
        <servlet-class>servlet.NextQuestion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NextQuestion</servlet-name>
        <url-pattern>/jsp/NextQuestion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyExamInfo</servlet-name>
        <servlet-class>servlet.ModifyExamInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyExamInfo</servlet-name>
        <url-pattern>/jsp/ModifyExamInfo</url-pattern>
    </servlet-mapping>
</web-app>